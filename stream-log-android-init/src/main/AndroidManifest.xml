<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.getstream.log.android.init"
    >

    <application>

        <service
            android:name="io.getstream.log.android.init.StreamLogFileService"
            android:enabled="true"
            android:exported="true"
            >

            <intent-filter>
                <action android:name="io.getstream.log.android.SHARE" />
            </intent-filter>

            <intent-filter>
                <action android:name="io.getstream.log.android.CLEAR" />
            </intent-filter>

        </service>

        <provider
            android:name="io.getstream.log.android.init.StreamLogFileProvider"
            android:authorities="${applicationId}.streamlogfileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/log_file_paths"
                />
        </provider>

    </application>

</manifest>